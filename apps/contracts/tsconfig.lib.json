{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"tsBuildInfoFile": "out-tsc/contracts/tsconfig.lib.tsbuildinfo",
		"outDir": "../../dist/out-tsc/contracts",
		"declaration": true,
		"composite": true,
		"types": ["node", "vite/client"]
	},
	"include": ["src/**/*.ts"],
	"exclude": [
		"vite.config.ts",
		"vite.config.mts",
		"vitest.config.ts",
		"vitest.config.mts",
		"src/**/*.test.ts",
		"src/**/*.spec.ts",
		"src/**/*.test.tsx",
		"src/**/*.spec.tsx",
		"src/**/*.test.js",
		"src/**/*.spec.js",
		"src/**/*.test.jsx",
		"src/**/*.spec.jsx"
	]
}
